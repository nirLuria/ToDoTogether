<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_notebook_paper"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example22.nluria.missionList.viewGroups">


    //old list view, before swipe.

    <ListView
        android:layout_width="138dp"
        android:layout_height="250dp"
        android:id="@+id/tasksListView"
        android:layout_marginTop="45dp"
        android:layout_alignTop="@+id/title"
        android:textColor="#555555"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="138dp"
        android:layout_height="250dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/completedTasksListView2"
        android:textColor="#1111"
        android:layout_below="@+id/delete_tasks_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp" />

    <Button
        android:layout_width="136dp"
        android:layout_height="35dp"
        android:text="@string/clear_tasks"
        android:id="@+id/delete_tasks_btn"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/Add_btn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Title"
        android:id="@+id/title"
        android:layout_column="10"
        android:layout_width="433dp"
        android:layout_height="44dp"
        android:textSize="26dp"
        android:layout_weight="0.25"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <ListView
        android:layout_width="138dp"
        android:layout_height="370dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/completedTasksListView"
        android:textColor="#1111"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="34dp" />

    <Button
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:text="@string/Add_new_task"
        android:id="@+id/Add_btn"
        android:elegantTextHeight="false"
        android:clickable="false"
        android:layout_gravity="right"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"


        android:layout_above="@+id/completedTasksListView"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="138dp"
        android:layout_height="370dp"
        android:maxHeight="150dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/delete_tasks_btn"
        android:layout_alignParentStart="true">
        android:textColor="@color/colorPrimary"
     </android.support.v7.widget.RecyclerView>

    android:layout_marginEnd="32dp" />
        android:textSize="@dimen/abc_dropdownitem_icon_width"
        android:textStyle="bold" />


</RelativeLayout>
