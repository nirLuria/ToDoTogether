<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/yellow_notebook_paper"
    tools:context="com.example22.nluria.missionList.MainActivity">



    <Button
        android:text="Notification"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/exitBotton"
        android:id="@+id/notification"
        android:onClick="showNotification"
        />


    <Button
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:text="@string/exit"
        android:id="@+id/exitBotton"
        android:singleLine="false"
        android:background="@drawable/exit"
        android:shadowColor="#343434"
        android:textColor="#fefefe"
        android:textSize="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        />

    <ListView
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:id="@+id/groupsListViewMain"
        android:layout_below="@+id/New_ListButton"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        />


    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/create_a_new_group"
        android:id="@+id/New_ListButton"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"
        android:layout_alignWithParentIfMissing="false"
        android:textSize="14dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true" />


